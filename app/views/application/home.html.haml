.col-sm-4.col-sm-offset-4
  = form_tag "/product_search", method: :get do
    = select_tag "product[name]", options_from_collection_for_select(Product.all, :id, :name), class: "form-control"
    = select_tag "product[state]", options_from_collection_for_select(State.all, :id, :abbr), class: "form-control"
    = text_field_tag :postcode, nil, class: "locationsearch", class: "form-control"
    = hidden_field_tag :state
    = submit_tag "Find Out Now", class: "btn form-control"